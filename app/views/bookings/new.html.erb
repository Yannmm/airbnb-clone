<main class="pt-4 pb-16">
  <div class="mx-auto max-w-2xl px-4 pt-8 sm:px-6 lg:grid lg:max-w-7xl lg:grid-cols-4 lg:grid-rows-[auto,auto,1fr] lg:gap-x-24 lg:px-8 lg:pt-8">
    <div class="lg:col-span-2 lg:border-gray-200">
      <h2 class="text-3xl font-medium leading-6 text-gray-900">Confirm and pay</h2>
      <div class="mt-8">
        <h3 class="text-xl font-medium text-gray-900">Your trip</h3>
        <div class="flex justify-between mt-4">
          <p class="font-medium">Dates</p>
          <p class="font-medium"><%= @checkin_date.strftime('%e %b') %> - <%= @checkout_date.strftime('%e %b') %></p>
        </div>
      </div>
      <div class="pt-12 mt-12 border-t border-gray-300">
        <h3 class="text-xl font-medium text-gray-900">Ground rules</h3>
        <p class="mt-6 font-light">We ask every gutest to remember a few simple things about what makes a great guest</p>
        <ul class="mt-4 font-light list-disc ms-4">
          <li class="">
            Follow the house rules.
          </li>
          <li class="">
            Treat your host's home like your own.
          </li>
        </ul>
      </div>
      <%= form_with url: booking_payments_path(property_id: @property.id, 
        user_id: current_user.id, 
        checkin_date: @checkin_date, 
        checkout_date: @checkout_date, 
        base_fare: @base_fare, 
        service_fee: @service_fee, 
        total_before_taxes: @total_before_taxes, unit_price: @unit_price), method: :post do |form| %>
        <%= form.submit 'Confirm and pay', class: "mt-12 flex w-full items-center justify-center rounded-md border border-transparent bg-primary px-8 py-3 text-base font-medium text-white hover:bg-primary-dark focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2", data: { turbo: false } %>
      <% end %>
    </div>
    <!-- Booking component -->
    <div 
        class="p-6 mt-4 border border-gray-300 lg:col-span-2 lg:mt-0 rounded-xl h-min" 
      >
      <h2 class="sr-only">Booking Information</h2>
      <%= render 'properties/thumbnail', property: @property %>
      <div class="relative py-4">
        <div class="absolute inset-0 flex items-center">
          <div class="w-full border-t border-gray-300"></div>
        </div>
      </div>
      <div class="py-6">
        <h3 class="text-xl font-medium text-gray-900">Price details</h3>
        <div class="flex justify-between mt-4 font-light">
          <p><%= humanized_money_with_symbol @property.price %> x <span ><%= @night_count %></span> night</p>
          <p><%= currency_symbol %><span ><%= @base_fare %></span></p>
        </div>
        <div class="flex justify-between mt-4 font-light">
          <p>Airbnb service fee</p>
          <p><%= currency_symbol %><span ><%= @service_fee %></span></p>
        </div>
      </div>
      <div class="relative py-4">
        <div class="absolute inset-0 flex items-center">
          <div class="w-full border-t border-gray-300"></div>
        </div>
      </div>
      <div class="flex justify-between font-medium">
        <p>Total</p>
        <p><%= currency_symbol %><span ><%= @total_before_taxes %></span></p>
      </div>
    </div>
  </div>
</main>
