<div class="py-10 lg:col-span-2 lg:col-start-1 lg:border-gray-200 lg:pr-8">
  <!-- Description and details -->
  <div class="pt-1 mt-4 border-t border-gray-200 lg:pt-16">
    <h2 class="text-xl font-medium leading-6 text-gray-900">What this places offers</h2>
    <div class="grid grid-cols-1 mt-6 md:grid-cols-2">
      <% amenities.limit(8).each do |amenity| %>
        <%= render 'properties/amenity', amenity: amenity %>
      <% end %>
    </div>
    <% if amenities.count > 8 %>
      <%= button_to "Show All #{ amenities.count } amenities", ensemble_property_path, method: :get, data: { turbo_frame: :modal }, class: "px-4 py-3 mt-8 text-lg font-medium text-gray-900 bg-white rounded-md ring-black ring-2 hover:bg-gray-50" %>
    <% end %>
  </div>
</div>
