<div class="mx-auto max-w-7xl lg:flex lg:gap-x-16 lg:px-8">
  <%= render partial: 'shared/owner_sidebar' %>
  <main>
    <!-- Property Images -->
    <%= render 'owner/properties/images' %>
    <!-- Property info -->
    <%= render 'owner/properties/basics', path: owner_property_path, title: 'Edit Property' %>
    <!-- Amenities info -->
    <%= render 'owner/properties/amenities' %>
    <!-- Delete property -->
    <div class="px-8 py-8 my-8 border border-red-500 rounded-md lg:flex-auto">
      <div>
        <h2 class="text-base font-semibold leading-7 text-gray-900">Delete Property</h2>
        <p>This action is permanent and irreversible. Be cautious!</p>
        <%= button_to "Delete", owner_property_path, method: :delete, class: "mt-6 flex rounded-md border border-red-500 bg-white px-8 cursor-pointer py-3 text-base font-medium text-red-600 hover:bg-primary-dark hover:text-white focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2", data: { turbo_confirm: "Are you sure to delete this property?" } %>
      </div>
    </div>
  </main>
</div>
