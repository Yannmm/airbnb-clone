<%= link_to property_path(property) do %>
  <div class="relative z-0 cursor-pointer group" 
  data-map-target="property" 
  data-latitude=<%= property.latitude %> 
  data-longitude=<%= property.longitude %>
  data-price=<%= humanized_money_with_symbol property.price %>
  >
    <!-- Slider main container -->
    <div class="relative overflow-hidden bg-gray-200 rounded-md">
      <div class="swiper">
        <!-- Additional required wrapper -->
        <div class="swiper-wrapper">
          <!-- Slides -->
          <% property.images.each do |image| %>
            <%= image_tag image, class: "swiper-slide h-full w-full object-cover object-center lg:h-full lg:w-full", alt: "Front of men&#039;s Basic Tee in black."%>
          <% end %>
        </div>
        <!-- TODO: swiper not work -->
        <!-- If we need navigation buttons -->
        <div class="swiper-button-prev"></div>
        <div class="swiper-button-next"></div>
      </div>
      <div class="absolute top-0 right-0 z-10 m-4">
        <%= render partial: "properties/wishlists/item", locals: { property: property } %>
        <% if false %>
          <svg 
          data-controller="wishlist" 
          data-action="click->wishlist#updateWishlistStatus" 
            data-wishlist-status="<%= property.wishlisted_by?(current_user) %>" data-user-logged-in="<%= user_signed_in? %>" 
            data-property-id="<%= property.id %>"
            data-user-id="<%= current_user&.id %>"
            data-wishlist-id="<%= property.find_wishlist(current_user)&.id %>"
            data-wishlist-target='icon' 
            class="block h-6 w-6 stroke-white stroke-2 <%= property.wishlisted_by?(current_user) ? "fill-primary" : "fill-none" %>" 
            xmlns="http://www.w3.org/2000/svg" 
            viewBox="0 0 32 32" 
            aria-hidden="true" 
            role="presentation" 
            focusable="false" 
            style="var(--f-mkcy-f); stroke-width: 2; overflow: visible;">
            <path d="M16 28c7-4.73 14-10 14-17a6.98 6.98 0 0 0-7-7c-1.8 0-3.58.68-4.95 2.05L16 8.1l-2.05-2.05a6.98 6.98 0 0 0-9.9 0A6.98 6.98 0 0 0 2 11c0 7 7 12.27 14 17z"></path>
          </svg>
        <% end %>
      </div>
    </div>
    <div class="mt-2">
      <div class="flex items-baseline justify-between gap-x-0.5">
        <h3 class="text-base font-medium text-gray-700">
          <%= property.city %>, <%= country_name(property.country_code) %>
        </h3>
        <p class="flex items-baseline">
          <svg 
          class="block w-3 mr-1 fill-current h3" 
          xmlns="http://www.w3.org/2000/svg" 
          viewBox="0 0 32 32" 
          aria-hidden="true" 
          role="presentation" focusable="false">
            <path fill-rule="evenodd" d="m15.1 1.58-4.13 8.88-9.86 1.27a1 1 0 0 0-.54 1.74l7.3 6.57-1.97 9.85a1 1 0 0 0 1.48 1.06l8.62-5 8.63 5a1 1 0 0 0 1.48-1.06l-1.97-9.85 7.3-6.57a1 1 0 0 0-.55-1.73l-9.86-1.28-4.12-8.88a1 1 0 0 0-1.82 0z">
            </path>
          </svg>
          <% if property.reviews_count > 0 %>
            <%= property.average_final_rating.round(2) %> <%= "(#{property.reviews_count})" if minimal_details %>
          <% else %>
            <span class="text-sm font-light">New</span>
          <% end %>
        </p>
      </div>
      <%# TODO: kms based location %>
      <% if minimal_details %>
        <%= property.bedroom_count %> bedrooms Â· <%= property.bed_count %> beds
      <% else %>
        <p class="mt-0.5 text-sm text-gray-500"><%= property.available_dates.first.strftime('%e %b') + ' - ' + property.available_dates.last.strftime('%e %b') %></p>
        <p class="mt-0.5 text-sm font-light text-black">
          <span class="font-medium"><%= humanized_money_with_symbol property.price %>
          </span> / night</p>
      <% end %>
    </div>
  </div>
<% end %>