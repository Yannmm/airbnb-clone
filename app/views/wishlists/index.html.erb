<div class="bg-white">
  <div class="max-w-2xl px-4 py-2 mx-auto sm:px-6 lg:max-w-7xl lg:px-8">
    <h2 class="mt-12 text-3xl font-medium leading-6 text-gray-900">Wishlists</h2>
    <div class="grid grid-cols-1 mt-12 gap-x-6 gap-y-10 sm:grid-cols-2 lg:grid-cols-4 xl:gap-x-8">
      <% @properties.each do |property| %>
        <%= render 'properties/item', property: property, minimal_details: true %>
      <% end %>
    </div>
  </div>
</div>
