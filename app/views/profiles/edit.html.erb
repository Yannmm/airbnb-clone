<div class="mx-auto max-w-7xl lg:flex lg:gap-x-16 lg:px-8">
  <%= render partial: 'shared/profile_sidebar' %>
  <main class="px-8 py-8 my-8 border rounded-md lg:flex-auto">
    <div>
      <h2 class="text-base font-semibold leading-7 text-gray-900">Personal Information</h2>
      <p class="mt-1 text-sm leading-6 text-gray-600">Use a permanent address where you can receive mail.</p>
      <p class="mt-8 text-sm font-medium leading-6 text-gray-900">Email: <span><%= current_user.email %></span></p>
      <!-- TODO: insert form_with here -->
      <%= form_with model: @profile, class: "grid grid-cols-1 mt-10 gap-x-6 gap-y-8 sm:grid-cols-6" do |form| %>
        <div class="inline-flex items-center gap-x-8 sm:col-span-full">
          <% if user_signed_in? && current_user.profile.picture.attached?  %>
            <%= image_tag current_user.profile.picture, class: "h-24 w-24 rounded-full" %>
          <% else %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-24 h-24 rounded-full">
              <path stroke-linecap="round" stroke-linejoin="round" d="M17.982 18.725A7.488 7.488 0 0 0 12 15.75a7.488 7.488 0 0 0-5.982 2.975m11.963 0a9 9 0 1 0-11.963 0m11.963 0A8.966 8.966 0 0 1 12 21a8.966 8.966 0 0 1-5.982-2.275M15 9.75a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
            </svg>
          <% end %>
          <%= form.file_field :picture, class: "" %>
        </div>
        <div class="sm:col-span-3">
          <%= form.label :first_name, class: "text-sm font-medium leading-6 text-gray-900" %>
          <%= form.text_field :first_name, class: "mt-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-gray-900 sm:text-sm sm:leading-6" %>
        </div>
        <div class="sm:col-span-3">
          <%= form.label :last_name, class: "text-sm font-medium leading-6 text-gray-900" %>
          <%= form.text_field :last_name, class: "mt-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-gray-900 sm:text-sm sm:leading-6" %>
        </div>
        <div class="sm:col-span-3 sm:col-start-1">
          <%= form.label :country_code, class: "text-sm font-medium leading-6 text-gray-900" %>
          <!-- <%= form.country_select :country_code, html_options = {class: "mt-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-gray-900 sm:text-sm sm:leading-6"} %> -->
          <%= country_select(:profile, :country_code, {}, { class: 'form-control mt-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-gray-900 sm:text-sm sm:leading-6' }) %>
        </div>
        <div class="sm:col-span-3 sm:col-start-1">
          <%= form.label :address_1, class: "text-sm font-medium leading-6 text-gray-900" %>
          <%= form.text_field :address_1, class: "mt-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-gray-900 sm:text-sm sm:leading-6" %>
        </div>
        <div class="sm:col-span-3">
          <%= form.label :address_2, class: "text-sm font-medium leading-6 text-gray-900" %>
          <%= form.text_field :address_2, class: "mt-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-gray-900 sm:text-sm sm:leading-6" %>
        </div>
        <div class="sm:col-span-2 sm:col-start-1">
          <%= form.label :city, class: "text-sm font-medium leading-6 text-gray-900" %>
          <%= form.text_field :city, class: "mt-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-gray-900 sm:text-sm sm:leading-6" %>
        </div>
        <div class="sm:col-span-2">
          <%= form.label :state, 'State / Province', class: "text-sm font-medium leading-6 text-gray-900" %>
          <%= form.text_field :state, class: "mt-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-gray-900 sm:text-sm sm:leading-6" %>
        </div>
        <div class="sm:col-span-2">
          <%= form.label :zip_code, 'ZIP / Postal Code', class: "text-sm font-medium leading-6 text-gray-900" %>
          <%= form.text_field :zip_code, class: "mt-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-gray-900 sm:text-sm sm:leading-6" %>
        </div>
        <%= form.submit 'Update', class: "mt-12 flex w-full items-center justify-center rounded-md border border-transparent bg-primary px-8 cursor-pointer py-3 text-base font-medium text-white hover:bg-primary-dark focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2" %>
      <% end %>
    </div>
  </main>
</div>