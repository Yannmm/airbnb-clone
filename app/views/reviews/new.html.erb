          </div>
        </div>
        <div data-controller="rating">
          <div class="flex flex-col py-4">
            <%= form.label :value_rating %>
            <div class="flex">
              <%= form.hidden_field :value_rating %>
              <% 5.times do |i| %>
                <svg 
                data-rating=<%= i + 1 %>
                data-action="click->rating#setRating"
